# Environment Configuration Example
# Copy this file to .env and fill with your values

# Node Environment
NODE_ENV=development

# API Configuration
PORT=3000
API_PREFIX=api

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dashboard_macro
REDIS_URL=redis://localhost:6379

# External APIs
NEWS_API_KEY=your_newsapi_key_here
ALPHAVANTAGE_KEY=your_alphavantage_key_here
IEX_CLOUD_KEY=your_iex_key_here
IEX_SANDBOX=true
YFINANCE_ENABLED=true

# Scheduler
CRON_DAILY="0 8 * * *"
ENABLE_SCHEDULER=true

# Frontend
REACT_APP_API_URL=http://localhost:3000/api
VITE_API_URL=http://localhost:3000/api

# Railway MCPs
RAILWAY_API_TOKEN=your_railway_token_here
RAILWAY_PROJECT_ID=your_project_id

# GitHub MCP
GITHUB_TOKEN=your_github_token_here

# n8n MCP
N8N_API_KEY=your_n8n_api_key_here
N8N_BASE_URL=https://your-n8n-instance.com
N8N_INGESTION_WORKFLOW_ID=workflow_id_1
N8N_ANALYSIS_WORKFLOW_ID=workflow_id_2
N8N_MONITORING_WORKFLOW_ID=workflow_id_3

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Monitoring
LOG_LEVEL=debug
ENABLE_METRICS=true